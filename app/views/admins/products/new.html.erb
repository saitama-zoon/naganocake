<div class="row">
  <%= form_with(model: @product, url: '/admins/products', local: true) do |f| %>
    <div col-md-2>
      <h2>商品新規登録</h2>
      <%= f.attachment_field :image %>
    </div>

    <div col-md-8>
      <%= f.label :name, "商品名" %>
      <%= f.text_field :name %>
      <%= f.label :introduction, "商品説明" %>
      <%= f.text_field :introduction %>
      <%= f.label :name, "ジャンル" %>
      <%= f.collection_select(:category_id, @categories, :id, :name) %>
      <%= f.label :price, "税抜価格" %>
      <%= f.text_field :price %>
      <%= f.label :is_sale_status, "販売ステータス" %>
      <%= f.select :is_sale_status, ["販売中", "売切中"] %>
    </div>

    <div col-md-2>
     <%= f.submit "新規登録" %>
    </div>
  <% end %>
</div>