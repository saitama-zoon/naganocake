<div class="container">
  <div class="row">
    <%= form_with(model: @product, url: '/admins/products', local: true) do |f| %>
      <div class="col-lg-12">
        <h4 style="padding-bottom: 10px;"><span style="background-color:#f8f8f8">商品新規登録</span></h4>
      </div>
      <div class="row o-3column">
        <div class="col-lg-3" >
          <%= attachment_image_tag @product, :image, :fill, 300, 200, format: 'jpeg' %>
          <%= f.attachment_field :image %>
        </div>

      <div class="col-lg-9">
        <%= f.label :name, "商品名" %>
      <span style="font-size: 17px; padding-left: 66px; ">
        <%= f.text_field :name %><br>
      </span>
        <%= f.label :introduction, "商品説明" %>
      <span style="font-size: 17px; padding-left: 52px; ">
        <%= f.text_area :introduction %><br>
      </span>
        <%= f.label :name, "ジャンル" %>
      <span style="font-size: 17px; padding-left: 53px; ">
        <%= f.collection_select(:category_id, @categories, :id, :name, include_blank: "-- 選択してください --") %><br>
      </span>
        <%= f.label :price, "税抜価格" %>
      <span style="font-size: 17px; padding-left: 52px; ">
        <%= f.text_field :price %><br>
      </span>
        <%= f.label :is_sale_status, "販売ステータス" %>
      <span style="font-size: 17px; padding-left: 10px; ">
        <%= f.select :is_sale_status, ["販売中", "売切中"], include_blank: "-- 選択してください --" %>
      </span>
      </div>

      <div class="col-lg-2 col-lg-offset-10">
       <%= f.submit "新規登録", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>