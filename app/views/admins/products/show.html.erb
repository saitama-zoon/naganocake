<div class="row">
  <%= form_with(model: @product, local: true) do |f| %>
    <div col-md-2>
      <h2>商品詳細</h2>
      <%= attachment_image_tag @product, :image, :fill, 40, 40, format: 'jpeg' %>
    </div>

    <div col-md-8>

      <%= f.label :name, "商品名" %>
      <%= @product.name %>
      <%= f.label :introduction, "商品説明" %>
      <%= @product.introduction %>
      <%= f.label :name, "ジャンル" %>
      <%= @product.category.name %>
      <%= f.label :price, "税抜価格" %>
      <%= @product.price %>
      <%= f.label :is_sale_status, "販売ステータス" %>
      <%= @product.is_sale_status %>

    </div>

    <div col-md-2>
     <%= link_to "編集する", edit_admins_product_path(@product.id) %>
    </div>
  <% end %>
</div>