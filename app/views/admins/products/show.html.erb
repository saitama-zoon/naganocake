<div class="container">
  <div class="row">
    <%= form_with(model: @product, local: true) do |f| %>
      <div class="col-lg-12">
        <h4 style="padding-bottom: 10px;"><span style="background-color:#D5D7DD;">　商品詳細　</span></h4>
      </div>

        <div class="row o-3column">
          <div class="col-lg-3" >
            <%= attachment_image_tag @product, :image, :fill, 300, 200, format: 'jpeg', fallback: 'no_image.png' %>
          </div>
          <div class="col-lg-9" >
            <%= f.label :name, "商品名" %>
              <span style="font-size: 18px; padding-left: 10px;">
            <%= @product.name %><br>
              </span>
            <%= f.label :introduction, "商品説明" %>
              <span style="font-size: 18px; padding-left: 10px;">
            <%= @product.introduction %><br>
              </span>
            <%= f.label :name, "ジャンル" %>
              <span style="font-size: 18px; padding-left: 10px;">
            <%= @product.category.name %><br>
              </span>
            <%= f.label :price, "税込価格(税抜価格)" %>
              <span style="font-size: 18px; padding-left: 10px;">
            <%= @tax.to_i %> (<%= @product.price %>)</span> 円<br>
            <%= f.label :is_sale_status, "販売ステータス" %>
             <span style="font-size: 18px; padding-left: 10px;"><%= @product.is_sale_status ? '販売中' : '売切中' %>
             </span>
          </div>
        </div>
      <div class="col-lg-2 col-lg-offset-10">

        <%= link_to "編集する", edit_admins_product_path(@product.id), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>