<div class="container">
  <div class="row">
    <%= form_with(model: @product, url: admins_product_path(@product), local: true) do |f| %>
      <div class="col-lg-12">
        <h4 style="padding-bottom: 10px;"><span style="background-color:#f8f8f8">　商品編集　</span></h4>
      </div>
      <div class="row o-3column">
        　<div class="col-lg-3" >
 　　        <%= attachment_image_tag @product, :image, size: "300x200", format: 'jpeg', fallback: 'no_image.jpg' %>
 　　        <%= f.attachment_field :image %>
 　　     </div>
         <div class="col-lg-9">
 　　　      <%= f.label :name, "商品名　" %>
          <span style="font-size: 17px; padding-left: 10px; ">
 　　　      <%= f.text_field :name %><br>
          </span>
 　　　      <%= f.label :introduction, "商品説明" %>
          <span style="font-size: 17px; padding-left: 10px;">
 　　　      <%= f.text_field :introduction %><br>
          </span>
 　　　      <%= f.label :name, "ジャンル" %>
          <span style="font-size: 17px; padding-left: 10px;">
 　　　      <%= f.collection_select(:category_id, Category.all, :id, :name) %><br>
          </span>
 　　　      <%= f.label :price, "税抜価格" %>
          <span style="font-size: 17px; padding-left: 10px;">
 　　　      <%= f.text_field :price %>円<br>
          </span>
 　　　      <%= f.label :is_sale_status, "販売ステータス" %>
          <span style="font-size: 17px; padding-left: 10px;">
 　　　      <%= f.select :is_sale_status, ["販売中", "売切中"] %>
          </span>
 　　　   </div>
      </div>
 　　　<div class="col-lg-2 col-lg-offset-10">
 　　　    <%= f.submit "変更を保存", class: "btn btn-primary" %>
 　　　</div>
    <% end %>
  </div>
</div>