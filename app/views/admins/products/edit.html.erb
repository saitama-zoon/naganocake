<div class="container">
  <div class="row">
    <%= form_with(model: @product, url: admins_product_path(@product), local: true) do |f| %>
      <div class="col-lg-5">
        <h2><span style="font-size: 20px;">商品編集</span></h2>
          <%= attachment_image_tag @product, :image, size: "300x200", format: 'jpeg', fallback: 'no_image.jpg' %>
          <%= f.attachment_field :image %>
      </div>

      <div class="col-lg-5">
        <%= f.label :name, "商品名" %>
        <%= f.text_field :name %><br>
        <%= f.label :introduction, "商品説明" %>
        <%= f.text_field :introduction %><br>
        <%= f.label :name, "ジャンル" %>
        <%= f.collection_select(:category_id, Category.all, :id, :name) %><br>
        <%= f.label :price, "税抜価格" %>
        <%= f.text_field :price %>円<br>
        <%= f.label :is_sale_status, "販売ステータス" %>
        <%= f.select :is_sale_status, ["販売中", "売切中"] %>
      </div>

      <div class="col-lg-2">
        <%= f.submit "変更を保存", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>