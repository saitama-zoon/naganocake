<div class="row">
  <div class="col-md-2">
    <h2>ジャンル編集</h2>
      <%= form_with(model: @category, url: '/admins/categories/:id', local: true) do |f| %>
        <div class="form">
          <%= f.label :name, "ジャンル" %>
          <%= f.text_field :name %>
          <%= f.radio_button :is_effective, :true %>
          <%= f.label :is_effective, "有効", {value: true} %>
　　　　　　<%= f.radio_button :is_effective, :false %>
          <%= f.label :is_effective, "無効", {value: false} %>
          <%= f.submit "変更を保存する" %>
        </div>
      <% end %>
  </div>
</div>