<div class="container">
	<div class="row">
		<div class="col-lg-12">
          <h4 style="padding-bottom: 10px;">
          	<span style="background-color:#f8f8f8;"><%= @customer.first_name%><%= @customer.last_name %>さんの会員情報編集
          	</span>
          </h4>

          <%= form_with model: @customer, url: admins_customer_path(@customer.id),local: true do |f| %>
          <%# ここからエラーメッセージ %>
            <% if @customer.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this destination from being saved:</h2>
          
                <ul>
                  <% @customer.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <%# ここまでエラーメッセージ %>
   　   <table class="table" style="width: 800px;">
      <thead>
        </thead>
          <tbody>
            <tr>
              <th style="padding-bottom: 10px; border: none;">顧客ID</th>
        <td style="padding-bottom: 10px; font-size: 17px; border: none;"><%= @customer.id %>
        </td>
            </tr>
            <tr>
              <td style="border: none;"><strong>名前　　　　　　　(姓)</strong></td>
              <td style="border: none;"><div class="field">
                   <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
                  </div>
              </td>
              <td style="border: none;"><div class="field">
                   <%= f.label :"(名)" %>
                   <span style="padding-left: 15px"><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></span>
                  </div>
              </td>
            </tr>
            <tr>
              <td style="border: none;"><strong>フリガナ　　　　（セイ）</strong></td>
              <td style="border: none;"><div class="field">
                  <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
                  </div>
              </td>
              <td style="border: none;"><div class="field">
                  <%= f.label :"(メイ)" %>
                  <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
                  </div>
              </td>
            </tr>
            <tr>
              <td style="border: none;"><strong>メールアドレス</strong></td>
              <td style="border: none;"><div class="field">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                  </div>
              </td>
              <td style="border: none;">
              </td>
            </tr>
            <tr>
              <td style="border: none;"><strong>郵便番号(ハイフンなし)</strong></td>
              <td style="border: none;"><div class="field">
                  <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
                  </div>
              </td>
              <td style="border: none;">
              </td>
            </tr>
            <tr>
              <td style="border: none;"><strong>住所</strong></td>
              <td style="border: none;"><div class="field">
                  <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
                  </div>
              </td>
            </tr>
            <tr>
              <td style="border: none;"><strong>電話番号(ハイフンなし)</strong></td>
              <td style="border: none;"><div class="field">
                  <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
                  </div>
              </td>
            </tr>
            <tr>
              <td style="border: none;"><strong>会員ステータス</strong></td>
              <td style="border: none;">
                <%= f.radio_button :is_member, :Available %>
                <%= f.label :is_member, "有効", {value: true } %>
                <%= f.radio_button :is_member, :Invalid %>
                <%= f.label :is_member, "無効", {value: false} %>
              </td>
            </tr>

          </tbody>
        </table>
        <%= f.submit "変更を保存する", class: "btn btn-primary"%>
　　　　<% end %>



        </div>
    </div>
</div>