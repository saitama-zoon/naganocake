<h2><%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細</h2>
<table>
	<tr>
		<th>顧客ID</th>
		<td><%= @customer.id %>
			<% if @customer.is_member == true %>
				有効
			<% else %>
				無効
			<% end %>
		</td>
	</tr>
	<tr>
		<th>氏名</th>
		<td>
			<%= @customer.first_name %> <%= @customer.last_name %>
		</td>
	</tr>
	<tr>
		<th>フリガナ</th>
		<td>
			<%= @customer.first_name_kana %> <%= @customer.last_name %>
		</td>
	</tr>
	<tr>
		<th>郵便番号</th>
		<td><%= @customer.postal_code %></td>
	</tr>
	<tr>
		<th>住所</th>
		<td><%= @customer.address %></td>
	</tr>
	<tr>
		<th>電話番号</th>
		<td><%= @customer.phone_number%></td>
	</tr>
	<tr>
		<th>メールアドレス</th>
		<td><%= @customer.email %></td>
	</tr>
</table>

<%= link_to "編集する",edit_admins_customer_path(@customer) %>
<%= link_to "注文履歴一覧を見る",admins_orders_path(@customer) %>