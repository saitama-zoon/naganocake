<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
　　 <header class="navbar navbar-fixed-top navbar-default ">
      <div class="container p-4">
       <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "#{key}") %>
       <% end %>
       <nav class="nav navbar-nav navbar-left">
         <%= link_to image_tag("logo.png", class: "image"), home_path %>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right ">
            <% if customer_signed_in? %>


              <li><%= link_to 'マイページ', customer_path, class: '' %></li>
              <li><%= link_to '商品一覧', products_path, class: '' %></li>
              <li><%= link_to 'カート', cart_products_path, class: '' %></li>

              <li><%= link_to 'ログアウト', destroy_customer_session_path, method: :delete, class: '' %></li>
            <% else %>
              <li><%= link_to 'About', about_path, class: '' %></li>
              <li><%= link_to '商品一覧', "#", class: '' %></li>
              <li><%= link_to '新規登録', new_customer_registration_path, class: '' %></li>
              <li><%= link_to 'ログイン', new_customer_session_path, class: '' %></li>
            <% end %>
          </ul>
        </nav>

      </div>
    </header>

    <%= yield %>
  </body>
</html>
