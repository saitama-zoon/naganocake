<div class="container">
  <div class="row">
    <div class="col">

      <h3>配送先登録/一覧</h3>
      <%= form_for(@destination) do |f| %>
		<h4>郵便番号(ハイフンなし）</h4>
    <%= f.text_field :postal_code %>
		<h4>住所</h4>
		<%= f.text_field :address %>

		<h4>宛名</h4>
		<%= f.text_field :name %>
		<br><%= f.submit '登録する' %>

	　<% end %>
   　 <table class="table">
		<thead>
		  <tr>
		   	<th>郵便番号</th>
		   	<th>住所</th>
		   	<th>宛名</th>
		   	<th></th>
		  </tr>
    	</thead>
    	<% @destinations.each do |destination| %>
        <tbody>
            <tr>
              <td><%= destination.postal_code %></td>
              <td><%= destination.address %></td>
              <td><%= destination.name %></td>
              <td><%= link_to "Edit", edit_destination_path(destination.id) %></td>
              <td><%= link_to "Destroy", destination_path(destination.id), method: :delete %></td>
            </tr>
        </tbody>
        <% end %>
       </table>
    </div>
  </div>
</div>