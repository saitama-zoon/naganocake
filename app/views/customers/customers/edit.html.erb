<div class="container">
  <div class="row">
    <div class="col">

      <h3>登録情報編集</h3>

      <%= form_for(@customer) do |f| %>
   　   <table class="table">
		  <thead>
    	  </thead>
          <tbody>
            <tr>
              <td>名前</td>
              <td><div class="field">
                   <%= f.label :"(姓)" %>
                   <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
                  </div>
              </td>
              <td><div class="field">
                   <%= f.label :"(名)" %>
                   <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
                  </div>
              </td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td><div class="field">
                  <%= f.label :"(セイ)" %>
                  <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
                  </div>
              </td>
              <td><div class="field">
                  <%= f.label :"(メイ)" %>
                  <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
                  </div>
              </td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><div class="field">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                  </div>
              </td>
              <td>
              </td>
            </tr>
            <tr>
              <td>郵便番号(ハイフンなし)</td>
              <td><div class="field">
                  <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
                  </div>
              </td>
              <td>
              </td>
            </tr>
            <tr>
              <td>住所</td>
              <td><div class="field">
                  <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
                  </div>
              </td>
            </tr>
            <tr>
              <td>電話番号(ハイフンなし)</td>
              <td><div class="field">
                  <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
                  </div>
              </td>
            </tr>
          </tbody>
        </table>
		    <%= f.submit "編集内容を保存する"%>

	  <% end %>

	  <li><%= link_to '退会する', customer_withdrawl_path, class: '' %></li>