<div class="container">
  <div class="row">
    <div class="col">

      <h3>マイページ</h3>
      <h4>登録情報</h4>
        <%= link_to '編集する', edit_customer_path, class: '' %>
        <%= link_to 'パスワードを変更する', new_admin_password_path, class: '' %>
        <table class="table">
          <tbody>
            <tr>
              <td>氏名</td>
              <td><%= @customer.first_name %><%= @customer.last_name %></td>
            </tr>
            <tr>
              <td>カナ</td>
              <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
            </tr>
            <tr>
              <td>郵便番号</td>
              <td><%= @customer.postal_code %></td>
            </tr>
            <tr>
              <td>住所</td>
              <td><%= @customer.address %></td>
            </tr>
            <tr>
              <td>電話番号</td>
              <td><%= @customer.phone_number %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= @customer.email %></td>
            </tr>
          </tbody>
        </table>

      <h4>配送先</h4>
      　　<%= link_to '一覧を見る', destinations_path , class: '' %>
      <h4>注文履歴</h4>
      	 <%= link_to '一覧を見る', "#", class: '' %>

    </div>
  </div>
</div>