<div class="container">
  <div class="row">
    <div class="col-lg-2">
      <table class="table" style="border: 1px solid #696969; height: 100px">
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>

        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= link_to category.name, search_products_path(category.id), method: :get %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-lg-5" style="text-align: center; padding-top: 30px;">
      <%= attachment_image_tag @product, :image, :fill, 300, 200, format: 'jpeg', fallback: 'no_image.png' %>
    </div>

    <div class="col-lg-5" style="text-align: center; padding-top: 30px;">
      <p style="font-size: 25px; padding-right: 200px;">
        <strong><%= @product.name %>     </strong>
      </p>
      <p style="padding-right: 200px; padding-top: 10px;">
        <%= @product.introduction %>
      </p>
      <p style="font-size: 18px; padding-right: 200px; padding-top: 80px;">
        <strong>¥ <%= @tax.to_i %></strong>(税込)
      </p>
    </div>
    <div style="text-align: right;">
        <%= form_for @cart_product do |f| %>
          <%= f.select :quantity, options_for_select(1..10), include_blank: "個数を選択" %>
          <%= link_to "カートに入れる", cart_products_create_path(@product), method: :post, class: "btn btn-primary" %>
        <% end %>
    </div>
  </div>
</div>