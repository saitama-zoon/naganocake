<div class="container">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3" style=" padding-top: 100px;">
      <h4><mark style="background-color: #D5D7DD;">　会員の方はこちらからログイン　</mark></h4>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%# ここからエラーメッセージ %>
        <% if alert %>
         <p class="alert alert-error">
         <%= alert %></p>
         <% end %>
        <%# ここまでエラーメッセージ %>
        <div class="field" style="padding-top: 25px;">
          <%= f.label :メールアドレス, style: 'padding-left: 80px;' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", style: 'width: 300px;' %>
        </div>

        <div class="field" style="padding-top: 8px;">
          <%= f.label :パスワード, style: 'padding-left: 80px;' %>
          <span style="padding-left: 26px;">
            <%= f.password_field :password, autocomplete: "current-password", style: 'width: 300px;' %>
          </span>
        </div>

        <div class="field" style="padding-left: 268px;">
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "=>パスワードを忘れた方はこちら", new_password_path(resource_name) %><br />
          <% end %>
        </div>

        <div class="actions" style="padding-left: 180px;">
          <p style="padding-top: 10px;"><%= f.submit "ログイン", class: "btn btn-primary" %></p>
        </div>
      <% end %>

      <h4 style="padding-top: 50px;"><mark style="background-color: #D5D7DD">　登録がお済みでない方　</mark></h4>
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <p style="padding-left: 80px; padding-top: 15px;">
          <%= link_to "こちら", new_registration_path(resource_name) %>  から新規登録を行なってください。<br />
        </p>
      <% end %>
    </div>
  </div>
</div>