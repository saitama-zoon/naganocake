<div class="container">
  <div class="row">
    <div class="col" style="text-align: center; padding-top: 100px;">
      <h4><mark style="background-color: #F8F8F8F8;">会員の方はこちらからログイン</mark></h4>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field" style="padding-top: 25px;">
          <%= f.label :メールアドレス, style: 'padding-left: 300px;' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", style: 'width: 300px;' %>
        </div>

        <div class="field">
          <%= f.label :パスワード, style: 'padding-left: 300px;' %>
          <span style="padding-left: 26px;">
            <%= f.password_field :password, autocomplete: "current-password", style: 'width: 300px;' %>
          </span>
        </div>

        <div class="field" style="padding-left: 600px;">
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "=>パスワードを忘れた方はこちら", new_password_path(resource_name) %><br />
          <% end %>
        </div>

        <div class="actions" style="padding-left: 250px;">
          <p style="padding-top: 10px;"><%= f.submit "ログイン", class: "btn btn-primary" %></p>
        </div>
      <% end %>

      <h4 style="padding-right: 70px; padding-top: 50px;"><mark style="background-color: #F8F8F8F8;">登録がお済みでない方</mark></h4>
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <p style="padding-left: 170px; padding-top: 25px;">
          <%= link_to "こちら", new_registration_path(resource_name) %>  から新規登録を行なってください。<br />
        </p>
      <% end %>
    </div>
  </div>
</div>