<h1> ショッピングカート</h1>
<%= link_to "カートを空にする", cart_products_destroy_all_path method: :delete %>
<!-- destrpy_allにてcart_productsを一斉削除 -->
<table class="table">
	<tr>
		<th>商品名</th><th>単価（税込）</th><th>数量</th><th>小計</th><th></th>
	</tr>
	<% @cart_products.each do |item| %>
	<tr>
		<td><%= attachment_image_tag item.product, :image,style:"width:50px; height: 50px;",fallback: "no_image.png" %><%= item.product.name %></td>
		<td><%= item.price_with_tax %></td>
		<td>
			<%= form_for(item, url:cart_product_path) do |f| %>
				<%= f.text.field :quantity %>
				<%= submit '変更' %>
			<% end %>
		</td>
		<td>
			<%= link_to "削除する", cart_product_path(item),method: :delete %>
		</td>
	</tr>
</table>
<%= link_to "買い物を続ける", products_path %>
<table class="table">
	<tr><th>合計金額</th><td><%= @total_price %></td></tr>
</table>
<%= link_to "情報入力に進む",new_orders_path %>






