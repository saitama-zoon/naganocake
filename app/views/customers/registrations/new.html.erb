<div class="container">
<div class="row">
<div class="col">

  <h4>新規会員登録</h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>
 <table class="table">
    <thead>
    </thead>
    <tbody>
      <tr>
        <td>名前</td>
        <td><div class="field">
             <%= f.label :"(姓)" %>
             <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
            </div>
        </td>
        <td><div class="field">
             <%= f.label :"(名)" %>
             <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
            </div>
        </td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><div class="field">
            <%= f.label :"(セイ)" %>
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
            </div>
        </td>
        <td><div class="field">
            <%= f.label :"(メイ)" %>
            <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
            </div>
        </td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
        </td>
        <td>
        </td>
      </tr>
      <tr>
        <td>郵便番号(ハイフンなし)</td>
        <td><div class="field">
            <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", id:"customer_postcode" %>
            </div>
        </td>
        <td>
        </td>
      </tr>
      <tr>
        <td>住所</td>
        <td><div class="field">
            <%= f.text_field :address, autofocus: true, autocomplete: "address",id:"customer_address" %>
            </div>
        </td>
      </tr>
      <tr>
        <td>電話番号(ハイフンなし)</td>
        <td><div class="field">
            <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
            </div>
        </td>
      </tr>
      <tr>
        <td>パスワード(６文字以上)</td>
        <td><div class="field">
            <%= f.password_field :password, autocomplete: "new-password" %>
            </div>
        </td>
      </tr>
      <tr>
        <td>パスワード(確認用)</td>
        <td><div class="field">
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
        </td>
      </tr>
    </tbody>
  </table>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
  <% end %>
  <h4>既に登録済みの方</h4>
  <div><%= render "customers/shared/links" %>からログインしてください。</div>

</div>
</div>
</div>